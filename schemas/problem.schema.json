{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "supreme-code/problem.schema.json",
  "title": "problem",
  "description": "Schema of problem manifest",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "difficulty": {
      "type": "string",
      "anyOf": [
        {
          "const": "Easy"
        },
        {
          "const": "Normal"
        },
        {
          "const": "Hard"
        }
      ]
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "string",
        "anyOf": [
          {
            "const": "Cpp"
          },
          {
            "const": "Java"
          },
          {
            "const": "Javascript"
          }
        ]
      }
    }
  },
  "required": [
    "id",
    "name",
    "description",
    "difficulty"
  ]
}